{% extends 'base.html.twig' %}

{% block title %}Liste des régions !{% endblock %}

{% block body %}

    <div class="container my-4">
        <h1>Les régions Françaises ! </h1>
        <div class="row">
            {% for maRegion in mesRegions %}
            <div class="col-md-4">
                <div class="card text-white bg-primary mb-3" style="max-width: 20rem;">
                    <div class="card-header">{{ maRegion.code }}</div>
                    <div class="card-body">
                        <h4 class="card-title">{{ maRegion.nom }}</h4>
                    </div>
                </div>
            </div>
            {% endfor %}

        </div>
    </div>

{% endblock %}
