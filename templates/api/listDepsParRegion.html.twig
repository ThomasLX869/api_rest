{% extends 'base.html.twig' %}

{% block title %}Liste des départements par régions !{% endblock %}

{% block body %}

    <div class="container my-4">
        <form action="" method="GET">
            <div class="row">
                <div class="col-md-10">
                    <div class="form-group">
                        <select name="region" id="region">
                            <option value="Toutes">Toutes</option>
                            {% for maRegion in mesRegions %}
                                <option value="{{ maRegion.code }}" {% if app.request.query.get("region") == maRegion.code %}selected {% endif %}>{{ maRegion.nom }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-primary">Rechercher</button>
                </div>
            </div>
        </form>
        <h1>Les départements Français ! </h1>
        <div class="row">
            {% for monDep in mesDeps %}
                <div class="col-md-4">
                    <div class="card text-white bg-primary mb-3" style="max-width: 20rem;">
                        <div class="card-header">{{ monDep.code }}</div>
                        <div class="card-body">
                            <h4 class="card-title">{{ monDep.nom }}</h4>
                        </div>
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>

{% endblock %}

